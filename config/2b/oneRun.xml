<?xml version="1.0"?>
<config>

    <!--
      Required for execution as of 2a
    -->

    <!-- Game configuration -->
    <searchType dataType="String">Evolutionary</searchType>
    <iterations dataType="Integer">10000</iterations>
    <memoryDepth dataType="Integer">5</memoryDepth>
    <maxTreeDepth dataType="Integer">5</maxTreeDepth>
    <shouldSeedRandom dataType="Boolean">true</shouldSeedRandom>
    <randomSeed dataType="Long">10021995</randomSeed>

    <!-- Experiment configuration -->
    <numRuns dataType="Integer">1</numRuns>
    <logFilePath dataType="String">./log/2a/valid1log.txt</logFilePath>
    <solFilePath dataType="String">./sol/2a/valid1sol.txt</solFilePath>

    <!--
      2a Algorithm parameters
    -->
    <depthProportionalInit dataType="Boolean">true</depthProportionalInit>

    <!--
      Evolutionary parameters
    -->
    <numChildren dataType="Integer">100</numChildren>
    <populationSize dataType="Integer">10000</populationSize>
    <parsimonyCoeficient dataType="Double">0.05</parsimonyCoeficient>
    <fitnessEvals dataType="Integer">10000</fitnessEvals>
    <convergenceCriterion dataType="Integer">15</convergenceCriterion>
    <mutationFrequency dataType="Double">0.5</mutationFrequency>
    <parentSelection dataType="String">fitnessProportionalSelection</parentSelection>
    <survivalSelection dataType="String">kTournamentSelection</survivalSelection>
    <!--<overSelectionCutOffPercentage dataType="Double">0.75</overSelectionCutOffPercentage>-->
    <tournamentSize dataType="Integer">3</tournamentSize>

</config>