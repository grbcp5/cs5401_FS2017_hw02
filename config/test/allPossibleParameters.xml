<?xml version="1.0"?>
<config>

    <!--
      This file is a list of all the possible parameters this program can
      utilize. All parameters in the required section will cause an exception
      in the program if they are not included. All parameters not in the required
      section will have an internal default value that is used if that parameter
      is not found.
    -->

    <!--
      Required for execution as of 2a
    -->

    <!-- Game configuration -->
    <searchType dataType="String">Random</searchType>
    <iterations dataType="Integer">1</iterations>
    <memoryDepth dataType="Integer">2</memoryDepth>
    <maxTreeDepth dataType="Integer">3</maxTreeDepth>
    <shouldSeedRandom dataType="Boolean">true</shouldSeedRandom>
    <randomSeed dataType="Long">10021996</randomSeed>

    <!-- Experiment configuration -->
    <numRuns dataType="Integer">1</numRuns>
    <logFilePath dataType="String">./log/2a/valid1log.txt</logFilePath>
    <solFilePath dataType="String">./sol/2a/valid1log.txt</solFilePath>

    <!--
      2a Algorithm parameters
    -->
    <depthProportionalInit dataType="Bool">true</depthProportionalInit>


</config>